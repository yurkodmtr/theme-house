			font-size rem(13px)
			line-height rem(15px)
			&:hover
				text-decoration underline
			&:before
				font-family: FontAwesome;		
				display block
				position absolute
				left 0px
				color white
			&.phone
				margin-right rem(22px)
				+below(mobile-cutoff)
					margin-right 0px
				&:before
					content "\f095"
			&.mail
				&:before
					content "\f003"

.mainheader
	&__middle
		padding rem(31px 0px 37px 0px)
		+below(desktop-cutoff)
			padding rem(31px 0px 17px 0px)
		.logo
			float left
			a
				display inline-block
				img 
					max-width 100%
		.nav_btn_open
			display none
			+below(desktop-cutoff)
				display block
			width: 30px
			height: 30px
			position: relative
			float right
			-webkit-transform: rotate(0deg)
			-moz-transform: rotate(0deg)
			-o-transform: rotate(0deg)
			transform: rotate(0deg)
			-webkit-transition: .5s ease-in-out
			-moz-transition: .5s ease-in-out
			-o-transition: .5s ease-in-out
			transition: .5s ease-in-out
			cursor: pointer
			span
				display: block
				position: absolute
				height: 4px
				width: 100%
				background: #ef1c23
				border-radius: 9px
				opacity: 1
				left: 0
				-webkit-transform: rotate(0deg)
				-moz-transform: rotate(0deg)
				-o-transform: rotate(0deg)
				transform: rotate(0deg)
				-webkit-transition: .25s ease-in-out
				-moz-transition: .25s ease-in-out
				-o-transition: .25s ease-in-out
				transition: .25s ease-in-out
				&:nth-child(1) 
					top: 0px
				&:nth-child(2), &:nth-child(3) 
					top: 13px
				&:nth-child(4) 
					top: 26px
			&.open 
				span:nth-child(1) 
					top: 18px
					width: 0%
					left: 50%
				span:nth-child(2) 
					-webkit-transform: rotate(45deg)
					-moz-transform: rotate(45deg)
					-o-transform: rotate(45deg)
					transform: rotate(45deg)
				span:nth-child(3) 
					-webkit-transform: rotate(-45deg)
					-moz-transform: rotate(-45deg)
					-o-transform: rotate(-45deg)
					transform: rotate(-45deg)
				span:nth-child(4) 
					top: 18px
					width: 0%
					left: 50% 

.mainheader
	&__middle
		.nav		
			display block
			+below(desktop-cutoff)
				display none	
			text-align right
			padding-top rem(10px)
			& > ul
