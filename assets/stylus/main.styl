//form
.form
	.input		
		line-height 1;
		font-size rem(14px)
		background white
		color #9f9f9f
		+placeholder()
    		color: #9f9f9f
		text-align left
		height rem(47px)
		border 1px solid #e3e3e3
		padding rem(0px 10px)
	.textarea		
		line-height rem(18px)
		font-size rem(14px)
		background white
		color #9f9f9f
		+placeholder()
    		color: #9f9f9f
		text-align left
		border 1px solid #e3e3e3
		padding rem(10px)
		resize none
		font-family font-stack(base-font-family) 
	.submit		
		line-height 1;
		font-size rem(14px)
		background red
		color white
		height rem(47px)
		border 1px solid red
		cursor pointer
		padding rem(0px 10px)
		transition(all 200ms ease-out)
		opacity 1
		&:hover
			opacity 0.8

// map
.map
	padding rem(4px)
	background white
	iframe
		width 100%!important

// --------------------------------------------- header
.mainheader
	position relative
	z-index 5

.mainheader
	&__top
		background red
		padding rem(9px 0px 10px)
		text-align right		
		span
			display none
		+below(mobile-cutoff)
			text-align center		
			span
				display block
				height 10px
		a
