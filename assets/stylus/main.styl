// reset
meyer-reset() 

* 
  box-sizing(border-box) 
  input, textarea
  	border none
  	outline none

.clearfix
	&:after
		content ''
		display block
		clear both

//typography
h2
	font-size rem(31px)
	line-height rem(35px)
	font-weight 700
	text-align center
	position relative
	padding-bottom rem(27px)
	margin-bottom rem(40px)
	&:before
		content ""
		display block
		width 30px
		height 4px
		background red
		position absolute
		bottom 0px
		left 0px
		right 0px
		margin 0 auto
h3
	font-size rem(25px) 
	line-height rem(31px)
	font-weight 700
	padding-bottom rem(17px)
	margin-bottom rem(40px)
	background url(../images/title_bg.png) repeat-x center bottom
	a
		text-decoration none
		color black
h4
	font-size rem(20px) 
	line-height rem(26px)
	font-weight 700
	padding-bottom rem(18px)
	margin-bottom rem(35px)
	background url(../images/title_bg.png) repeat-x center bottom


html
